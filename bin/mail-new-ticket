#!/bin/sh
#
# mail-new-ticket:
# Mail information about a new ticket in CVSTrac
#
# $Id: mail-new-ticket,v 1.1 2006-02-01 12:16:35 francis Exp $
#
ticket=$1
if [ x$ticket = x ] ; then
    echo 'mail-new-ticket: single argument is ticket number' >&2
    exit 1
fi
if ! echo "$ticket" | grep '^[0-9]\+$' > /dev/null ; then
    echo "mail-new-ticket: single argument should be a decimal number, not '$ticket'" >&2
    exit 1
fi
(
    # Can't just use lynx because it whines about certificates
    echo "https://secure.mysociety.org/cvstrac/tktview?tn=$ticket"
    echo ""
    fetch -q -o- "https://secure.mysociety.org/cvstrac/tktview?tn=$ticket" | \
        lynx -force_html -nolist -dump /dev/stdin | tail +5
    cat <<EOF
-- 
mail-new-ticket, \$Id: mail-new-ticket,v 1.1 2006-02-01 12:16:35 francis Exp $
EOF
) | mail -s "ticket #$ticket created/changed" mysociety-cvs@mysociety.org
